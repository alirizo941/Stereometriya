<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.stereometriya1.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_homeFragment_to_learnFragment"
            app:destination="@id/learnFragment" />
        <action
            android:id="@+id/action_homeFragment_to_testFragment"
            app:destination="@id/testFragment" />
    </fragment>

    <fragment
        android:id="@+id/learnFragment"
        android:name="com.example.stereometriya1.LearnFragment"
        android:label="LearnFragment"
        tools:layout="@layout/fragment_learn" />

    <fragment
        android:id="@+id/testFragment"
        android:name="com.example.stereometriya1.TestFragment"
        android:label="TestFragment"
        tools:layout="@layout/fragment_test" />

</navigation>
